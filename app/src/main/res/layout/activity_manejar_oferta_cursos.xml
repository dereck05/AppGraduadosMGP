<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManejarOfertaCursos">

    <ScrollView
        android:layout_width="338dp"
        android:layout_height="622dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manejar ofertas de cursos"
                android:textSize="30sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Seleccione un curso:"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Spinner
                android:id="@+id/spinnerCurso"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:onClick="cargarDatos"
                android:text="Buscar"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="62dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información del curso"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Código"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="-"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Nombre"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="-"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Descripción"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="-"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Profesor"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="-"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Periodo"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblPeriodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Bimestre 2 2019"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Horario"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblHorario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="-"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp"
                android:background="#F0F0F0" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="Precio"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F0F0F0"
                android:text="-"
                android:textSize="22sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Historial de ofertas"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <TableLayout
                android:id="@+id/tabla_historial"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/rowTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:text="Cédula"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="Tipo de oferta"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

            <include
                layout="@layout/table_row_historial_ofertas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="57dp" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interesados"
                android:textSize="24sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <TableLayout
                android:id="@+id/tabla_interesados"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="118dp"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="119dp"
                        android:layout_height="wrap_content"
                        android:text="Teléfono"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>

            <include
                layout="@layout/table_row_interesados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>