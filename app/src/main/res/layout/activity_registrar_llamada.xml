<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrarLlamada">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/notification_large_icon_width"
            android:text="Registrar Llamada"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:text="Cedula"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/txt_cedulaLlamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="112344567"
            android:text="" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="@android:dimen/app_icon_size"
            android:text="Motivo"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/txt_MotivoLlamada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <EditText
            android:id="@+id/txt_ComentarioLlamada"
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:hint="Comentarios"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_regLlamada"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/button_style"
            android:text="Registrar Llamada"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>